<% provide(:title, 'Create Role') %>
<h1>Create Role</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@type) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :description %>
      <%= f.text_field :description %>

      <%= f.submit "Create Role", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>